<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProductActivity"
    tools:showIn="@layout/activity_product">

        android:layout_width="408dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="3dp">

        <ImageView
            android:id="@+id/test_image"
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/test_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/test_image"
            android:layout_marginLeft="15dip"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="italic"

            />

        <Button
            android:id="@+id/button_1"
            android:layout_width="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/test_id"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="60dp"
            android:background="@android:drawable/btn_star_big_on"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <Button
            android:id="@+id/button_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignTop="@id/button_1"
            android:layout_toRightOf="@id/button_1"
            android:text="Связаться с продавцом"
            android:textColor="@color/vk_color"
            android:textSize="17sp" />

        <!--android:contentDescription="@string/banner_alt"-->
        <!--android:src="@drawable/banner_portrait"-->
</RelativeLayout>